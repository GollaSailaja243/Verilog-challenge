module tb;
  reg a,b;
  
  wire s,c;
  ha dut(a,b,s,c);
  
  initial begin
    $monitor("a:%b || b:%b || d:%b || s:%b  ",a,b,c,s);
  
    for (int j=0;j<4;j++)begin
      {a,b}=j;
      #10;
    end
    
  end
  
  
  
endmodule
